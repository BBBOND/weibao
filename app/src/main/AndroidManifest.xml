<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kim.weibao">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".welcome.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".addrepairapp.AddRepairAppActivity"
            android:label="@string/view_repairapp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addrepairapp.QRScannerActivity"
            android:label="@string/view_scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addrepairplan.AddRepairPlanActivity"
            android:label="@string/view_repairplan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addrepairplan.ShowRepairAppActivity"
            android:label="@string/view_repairapp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".checkproject.CheckCompletedProjectActivity"
            android:label="@string/view_checkproject"
            android:screenOrientation="portrait" />
        <activity
            android:name=".checkproject.ShowCompletedProjectActivity"
            android:label="@string/view_completedproject"
            android:screenOrientation="portrait" />
        <activity
            android:name=".examplan.ExamPlanActivity"
            android:label="@string/view_examplan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".examplan.ShowRepairPlanActivity"
            android:label="@string/view_repairplan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".index.IndexActivity"
            android:label="@string/view_index"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/view_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".planschedule.ShowPlanScheduleActivity"
            android:label="@string/view_planschedule"
            android:screenOrientation="portrait" />
        <activity
            android:name=".planschedule.UpdatePlanScheduleActivity"
            android:label="@string/view_updateplanschedule"
            android:screenOrientation="portrait" />
        <activity
            android:name=".showarea.ShowAreaActivity"
            android:label="@string/view_arealist"
            android:screenOrientation="portrait" />
        <activity
            android:name=".showarea.DetailedAreaActivity"
            android:label="@string/view_detailedarea"
            android:screenOrientation="portrait" />
        <activity
            android:name=".about.AboutActivity"
            android:label="@string/view_about"
            android:screenOrientation="portrait" />

        <activity
            android:name=".setting.SettingActivity"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- To auto-complete the email text field in the activity_login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
</manifest>
